<android.support.v7.widget.CardView
    android:id="@+id/cardView_notification"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/white"

        >

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/maksys_logo"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>
        <LinearLayout
            android:id="@+id/noti_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/notification_image"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:gravity="center"
                android:maxLines="2"
                android:paddingRight="16dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded"/>
            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:gravity="right"
                android:paddingRight="16dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="normal"
                tools:ignore="RtlHardcoded"/>
        </LinearLayout>


        <TextView
            android:id="@+id/notification_message"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noti_layout"
            android:layout_toRightOf="@+id/notification_image"
            android:paddingLeft="16dp"
            android:text="SubTiltle"
            android:lines="2"
            android:maxLines="4"
            android:paddingRight="16dp"
            android:textColor="#000"
            android:textSize="10sp"/>




    </RelativeLayout>
</android.support.v7.widget.CardView>