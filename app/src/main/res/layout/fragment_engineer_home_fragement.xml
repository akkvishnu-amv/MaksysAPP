<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Engineer_Home_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"

                    android:layout_marginLeft="7.5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/item2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"

                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_collapseMode="pin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@android:color/transparent"

                                android:gravity="center">
                                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/img_service"
                                        android:layout_marginTop="25dp"
                                        android:tint="@color/blueMaksys"
                                        android:src="@drawable/round_shop_black"/>

                                    <TextView
                                        android:id="@+id/tv_countservicerequest"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignTop="@id/img_service"
                                        android:layout_alignRight="@id/img_service"
                                        android:text="0"
                                        android:gravity="center"
                                        android:visibility="invisible"
                                        android:textColor="#FFF"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:background="@drawable/badge_circle"/>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="Service Requests"
                                    android:textStyle="bold"/>



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:id="@+id/text_engineer_service_count"
                                    android:gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:text=""/>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/btn_engineer_main_service_request"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </FrameLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView

                        android:id="@+id/item45"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_collapseMode="pin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@android:color/transparent"

                                android:gravity="center">
                                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/img_schedule"
                                        android:layout_marginTop="25dp"
                                        android:tint="@color/blueMaksys"
                                        android:src="@drawable/outline_schedule_black_24dp"/>

                                    <TextView
                                        android:id="@+id/text_engineer_schedule_count"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignTop="@id/img_schedule"
                                        android:layout_alignRight="@id/img_schedule"
                                        android:text=""
                                        android:gravity="center"

                                        android:visibility="invisible"
                                        android:textColor="#FFF"
                                        android:textSize="8sp"
                                        android:textStyle="bold"
                                        android:background="@drawable/badge_circle"/>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:text="Scheduled Tickets"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp"
                                    android:text=""/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:text=""/>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/btn_engineer_main_scheduled"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </FrameLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>



            </LinearLayout>


            //ROW 2

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"

                    android:layout_marginLeft="7.5dp"
                    android:layout_marginRight="7.5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:layout_below="@+id/txt_message"
                        android:id="@+id/item1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_collapseMode="pin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@android:color/transparent"

                                android:gravity="center">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="25dp"
                                    android:tint="@color/blueMaksys"
                                    android:src="@drawable/round_assignment_black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:text="My Tickets"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:id="@+id/text_engineer_ticket_count"
                                    android:layout_marginTop="20dp"
                                    android:visibility="invisible"
                                    android:layout_marginBottom="15dp"
                                    android:text="2 Tickets"/>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/btn_engineer_main_ticket"
                                android:layout_width="match_parent"

                                android:layout_height="match_parent">
                            </FrameLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="7.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView

                        android:id="@+id/item3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_collapseMode="pin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@android:color/transparent"

                                android:gravity="center">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="25dp"
                                    android:tint="@color/blueMaksys"
                                    android:src="@drawable/round_account_circle_black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:text="Profile"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp"
                                    android:text=""/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:text=""/>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/btn_engineer_main_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </FrameLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView

                        android:id="@+id/item4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_collapseMode="pin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@android:color/transparent"

                                android:gravity="center">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="25dp"
                                    android:tint="@color/blueMaksys"
                                    android:src="@drawable/round_settings_black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:text="Settings"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp"
                                    android:text=""/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:text=""/>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/btn_engineer_main_settings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </FrameLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView

                        android:id="@+id/item45s"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:visibility="invisible"
                        app:layout_collapseMode="pin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@android:color/transparent"

                                android:gravity="center">
                                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/img_scheduled"
                                        android:layout_marginTop="25dp"
                                        android:tint="@color/blueMaksys"
                                        android:src="@drawable/outline_schedule_black_24dp"/>

                                    >
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:text="Scheduled Tickets"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp"
                                    android:text=""/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:text=""/>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/btn_engineer_main_scheduledsd"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </FrameLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>



            </LinearLayout>
            //ROW 3

            //ROW 2




        </LinearLayout>
    </ScrollView>

</FrameLayout>