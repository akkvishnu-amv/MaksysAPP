<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.MobileOtpVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting to automatically detect an \n SMS sent to your mobile number"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="+91"
                android:padding="4dp"
                android:textColor="@color/grey"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="-"
                android:textColor="@color/grey"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txt_otp_mobile"
                android:padding="4dp"
                android:textColor="@color/grey"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/pencil"
                android:visibility="invisible"
                android:id="@+id/edit_mobile"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invalidotp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/invalid_otp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:cursorVisible="true"
                android:id="@+id/et_otp_pin_1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:inputType="phone"
                android:maxLength="1"
                android:cursorVisible="true"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_otp_pin_2"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:inputType="phone"
                android:maxLength="1"
                android:cursorVisible="true"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:textSize="24sp"
                android:id="@+id/et_otp_pin_3"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:cursorVisible="true"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_otp_pin_4"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:cursorVisible="true"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_otp_pin_5"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:cursorVisible="true"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_otp_pin_6"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receieve the code? "
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resendcode"
                android:textColor="@color/blueMaksys"
                android:gravity="center"
                android:id="@+id/resend_otp"
                android:layout_gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grey"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        android:id="@+id/verify_card">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_white"
            android:text="@string/verify"
            android:id="@+id/btn_verify_otp"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp"/>
    </android.support.v7.widget.CardView>
</FrameLayout>
