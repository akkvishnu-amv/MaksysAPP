<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LockScreenCustomerConfirm">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/logo_confirm_pin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_round"
        android:padding="5dp"
        android:src="@drawable/maksys_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pindescrption"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@id/logo_confirm_pin"
        android:id="@+id/description_pin_customerC"
        android:visibility="visible"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/description_pin_customerC"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="8dp"

        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pin_input_confirm"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Pin"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/blueMaksys"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/invalid_otp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:cursorVisible="true"
                android:id="@+id/et_pin_confirm_1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:inputType="phone"
                android:maxLength="1"
                android:cursorVisible="true"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_pin_confirm_2"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:inputType="phone"
                android:maxLength="1"
                android:cursorVisible="true"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:textSize="24sp"
                android:id="@+id/et_pin_confirm_3"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:cursorVisible="true"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_pin_confirm_4"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:cursorVisible="true"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_pin_confirm_5"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="4dp"
                android:textColorHighlight="@color/blueMaksys"
                android:textColorLink="@color/blueMaksys"
                android:cursorVisible="true"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/et_pin_confirm_6"/>


        </LinearLayout>


    </LinearLayout>




