<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="8dp"
    android:id="@+id/card_service_request_list"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/service_request_image"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:background="@drawable/maksys_logo"/>

            <TextView
                android:id="@+id/service_request_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:paddingLeft="16sp"
                android:gravity="center"
                android:maxLines="3"

                android:paddingRight="16dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded"/>
            <TextView
                android:id="@+id/service_request_description"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:gravity="left"
                android:maxLines="3"
                android:text=""
                android:textColor="#000"
                android:textSize="10dp"
                android:textStyle="normal"
                tools:ignore="RtlHardcoded"/>

            <Button
                android:id="@+id/btn_service_request_schedule"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"
                android:background="@color/blueMaksys"
                android:text="Schedule" />






        </LinearLayout>






    </RelativeLayout>
</android.support.v7.widget.CardView>