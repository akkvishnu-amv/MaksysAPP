<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e7e7e7"
    android:orientation="vertical"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_customer_ticket"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:paddingBottom="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/notification_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/maksys_logo"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView3"
                        android:textColor="@color/blueMaksys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Ticketcode" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/blueMaksys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Status" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_customer_ticket_title"
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="title"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_customer_ticket_status"
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/tv_customer_ticket_customer_status"

                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="ticket Status"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>